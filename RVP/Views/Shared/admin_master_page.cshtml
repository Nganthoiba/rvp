                        <div class="menu_section">
                            <!--<h3>General</h3>-->
                            <ul class="nav side-menu">
                                <li>
                                    <a href="/Admin/Index"><i class="fa fa-home"></i>Home</a>
                                </li>
                                <li>
                                    <a href="/Admin/Users"><i class="fa fa-user"></i>Approve or Reject User</a>
                                </li>
                                <li>
                                    <a href="/Request/PaymentHist"><i class="fa fa-cc-discover"></i>Transactions Records</a>
                                </li>
                                <li>
                                    <a href="/Admin/AllRequestHistory"><i class="fa fa-history"></i>Request Histories</a>      
                                </li>
                                
                                <li>
                                    <a href="#"><i class="fa fa-money"></i>Change Payment Rate</a>
                                </li>
                                <li>
                                    <a><i class="fa fa-book"></i> Subjects <span class="fa fa-chevron-down"></span></a>
                                    <ul class="nav child_menu">
                                        <li>
                                            @Html.ActionLink("Subject List", "Index", "Subjects")
                                        </li>
                                        <li>
                                            @Html.ActionLink("Create New Subject", "Create","Subjects")
                                        </li>
                                        <li>
