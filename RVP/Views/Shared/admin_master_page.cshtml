                                         class="img-circle img-thumbnail" data-toggle="modal" data-target="#ChangePhotoModal">
                                    
                                </label>
                            </div> 
                        </div>
                        <!-- /menu profile quick info -->
                        <div class="clearfix"></div>
                        <div class="profile_info">
                            <span>Welcome,</span>
                            <h2>@User.Identity.GetUserName()</h2>
                        </div>      
                    </div>
                    
                    <div class="clearfix"></div>

                    <!-- sidebar menu -->
