@model RVP.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    //Layout = "";
}
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>

        @Styles.Render("~/Content/custom_css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body class="">
        @*@Html.Partial("header")*@
        @*<div class="login_panel">*@
        <div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <center><h4>Create a new account:</h4></center>
                <!--@Html.ValidationSummary("", new { @class = "text-danger" })-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                        <!---->
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <!---->
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Mobile_phone_no, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Mobile_phone_no, new { @class = "form-control" })
                        <!---->
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Mobile_phone_no, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        <!---->
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @*<div class="control-label col-sm-2">
                        Back to @Html.ActionLink("login", "Login")
                    </div>*@
                    <div class="col-sm-offset-4 col-sm-4">
                        <input type="submit" class="btn btn-default" value="Register" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        @Html.ValidationMessageFor(m => m.reg_err, "", new { @class = "text-danger" })
                    </div>
                </div>
               
            }
        </div>
        
        
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        
    </body>
</html>
