@model RVP.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    //Layout = "";
}
<!DOCTYPE html>
<html>
    <head>
        <title>@ViewBag.Title</title>

        @Styles.Render("~/Content/custom_css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body class="">
        @*@Html.Partial("header")*@
        @*<div class="login_panel">*@
        <div>
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        <center><h3>Create a new account:</h3></center>
                    </div>
                </div>
                <!--@Html.ValidationSummary("", new { @class = "text-danger" })-->
                <div class="form-group">
                    @Html.LabelFor(m => m.Username, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Mobile_phone_no, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBoxFor(m => m.Mobile_phone_no, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Mobile_phone_no, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                    <div class="col-sm-4">
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        <center><input type="submit" class="btn btn-lg btn-block btn-primary" value="REGISTER" /></center>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-4">
                        @Html.ValidationMessageFor(m => m.reg_err, "", new { @class = "text-danger" })
                    </div>
                </div>
               
            }
        </div>
        
        
        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        
    </body>
</html>
