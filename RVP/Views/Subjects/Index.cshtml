@model IEnumerable<RVP.Models.Subject>

@{
    ViewBag.Title = "Subject List";
    Layout = "~/Views/Shared/admin_master_page.cshtml";
}
<p>
    <!--
    @Html.ActionLink("Create New", "Create")
    -->
</p>
<!-- Styles for data tables-->
@Styles.Render("~/Vendors/DataTables")
<table class="table table-striped table-bordered dt-responsive nowrap" id="subject_lists">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.sub_code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.abbrevation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.seq_cd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sub_type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sub_code)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.abbrevation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.seq_cd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sub_type)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>
</table>
@Scripts.Render("~/bundles/DataTables")
<script type="text/javascript">
    $(document).ready(function () {
        $("#subject_lists").DataTable({
            "columnDefs": [
                    { "orderable": false, "targets": [5] },
                    { "searchable": false, "targets": [5] },
                    { "className": "align-center", "targets": [5] }
            ],
            "order": [0, "asc"]
        });
    });
</script>